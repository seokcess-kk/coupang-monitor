{
  "name": "pricewatch",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @pricewatch/web dev",
    "build": "pnpm --filter @pricewatch/web build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "pnpm -r lint",
    "db:migrate": "pnpm --filter @pricewatch/db migrate:dev",
    "db:studio": "pnpm --filter @pricewatch/db studio"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "vitest": "^3.0.4",
    "@vitest/coverage-v8": "^3.0.4"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18"
  }
}
