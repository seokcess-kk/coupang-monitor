datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  id             String   @id @default(cuid())
  name           String?
  url            String   @unique
  productId      String?
  itemId         String?
  vendorItemId   String?
  dedupeKey      String?  @unique
  group          String?
  memo           String?
  variantCursor  Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  variants       Variant[]
  jobs           Job[]
}

model Variant {
  id        String     @id @default(cuid())
  itemId    String
  optionKey String
  active    Boolean    @default(true)
  item      Item       @relation(fields: [itemId], references: [id], onDelete: Cascade)
  snapshots Snapshot[]
  events    PriceEvent[]
  @@unique([itemId, optionKey])
}

model Snapshot {
  id           String   @id @default(cuid())
  variantId    String
  price        Int?
  statusCode   String
  rawPriceText String?
  checkedAt    DateTime @default(now())
  variant      Variant  @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@index([variantId, checkedAt])
}

model PriceEvent {
  id        String   @id @default(cuid())
  itemId    String
  variantId String
  oldPrice  Int
  newPrice  Int
  period    String   // "7d" | "30d"
  createdAt DateTime @default(now())
  variant   Variant  @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@index([variantId, createdAt])
}

model Job {
  id           String   @id @default(cuid())
  itemId       String
  scheduledFor DateTime @default(now())
  status       String   @default("PENDING") // PENDING | DONE | FAILED
  reason       String   // manual | scheduled
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  item         Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([status, scheduledFor])
}
