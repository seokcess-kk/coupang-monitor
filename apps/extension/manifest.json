{
  "manifest_version": 3,
  "name": "PriceWatch Agent",
  "version": "0.1.0",
  "description": "Coupang price monitor agent",
  "permissions": ["tabs", "scripting", "storage", "alarms"],
  "host_permissions": [
    "https://www.coupang.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "PriceWatch Agent"
  }
}
