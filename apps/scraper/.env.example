# PriceWatch Scraper Configuration

# API Connection (required)
API_BASE_URL=http://localhost:3000
EXTENSION_API_KEY=your-api-key-here

# Puppeteer Settings
SCRAPER_CONCURRENCY=3
SCRAPER_HEADLESS=true
PAGE_TIMEOUT_MS=20000
DEFAULT_VARIANT_PER_RUN=15

# Rate Limiting (delay between requests in ms)
SCRAPER_MIN_DELAY=2000
SCRAPER_MAX_DELAY=5000
SCRAPER_MAX_RETRIES=2

# HTTP Server
SCRAPER_PORT=3001

# Schedules (JSON array of cron schedules)
# SCRAPER_SCHEDULES='[{"name":"오전","cron":"0 7 * * *"},{"name":"저녁","cron":"0 19 * * *"}]'
